{
    "name": "Navigation",
    "tables": [
        {
            "name": "MenuItems",
            "hasGuid": true,
            "columns": [
                {
                    "name": "HierarchyGuid",
                    "isUnique": true
                },
                {
                    "name": "Url"
                },
                {
                    "name": "IsDirectory",
                    "isGenerated": true,
                    "formula": "Url is null or trim(Url) != ''"
                }
            ]
        },
        {
            "name": "LinkGroups",
            "hasKey": true,
            "columns": [
                {
                    "name": "Title"
                }
            ]
        },
        {
            "name": "Links",
            "columns": [
                {
                    "name": "LinkGroupId"
                },
                {
                    "name": "Text"
                },
                {
                    "name": "Url"
                }
            ],
            "indexes": [
                {
                    "columns": [
                        "LinkGroupId",
                        "Url"
                    ],
                    "isUnique": true
                }
            ]
        }
    ],
    "views": [
        {
            "name": "MenuItemViews",
            "query": [
                "select",
                "    mi.*,",
                "    thv.EntityTypeGuid,",
                "    thv.Title,",
                "    thv.IconGuid,",
                "    thv.IconSvg,",
                "    thv.ParentId,",
                "    thv.Description,",
                "    thv.Show,",
                "    thv.ItemsCount,",
                "    thv.Slug,",
                "    thv.Level,",
                "    thv.IsLeaf,",
                "    thv.Order,",
                "    thv.Key,",
                "    thv.Path",
                "from MenuItems mi",
                "inner join Taxonomy.HierarchyViews thv",
                "on mi.Guid = thv.Guid"
            ]
        }
    ]
}